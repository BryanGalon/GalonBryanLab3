<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title" parent="AppTheme">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">30dp</item>
        <item name="android:text">Hotel Salcedo</item>

    </style>

    <style name="Location" parent="AppTheme">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">25dp</item>
        <item name="android:text">Location: General Luna Streets, Vigan, Luzon 2700, Philippines</item>

    </style>

    <style name="Distance" parent="AppTheme">
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">25dp</item>
        <item name="android:text">Distance From UST: 401 km</item>
    </style>

    <style name="Button1" parent="AppTheme">
        <item name="android:text">Back</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="Button2" parent="Button1">
        <item name="android:text">Next</item>
    </style>
</resources>
